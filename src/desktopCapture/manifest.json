{
	"name" : "DualRTC-io",
    "author": "DualRTC",
	"version" : "1.0.1",
	"manifest_version" : 2,
    "minimum_chrome_version": "34",
	"description" : "Getting source id of screen, individual windows or tabs",
    "homepage_url": "http://DualRTC-io.github.io/",
	"background": {
		"scripts": ["websocket.js", "RTCMultiConnection.js", "desktop-capturing.js"],
		"persistent": false
	},
	"browser_action" : {
		"default_icon" : "images/desktopCapture22.png",
		"default_title" : "Capturing"
	},
	"icons" : {
		"16" : "images/desktopCapture16.png",
		"22" : "images/desktopCapture22.png",
		"32" : "images/desktopCapture32.png",
		"48" : "images/desktopCapture48.png",
		"128": "images/desktopCapture128.png"
	},
	"permissions": [
		"desktopCapture", "storage"
	],
	"web_accessible_resources": [
		"images/desktopCapture48.png"
	],
    "options_ui": {
       "page": "options.html",
       "chrome_style": true
    }
}